<!DOCTYPE html>
<html>
  <head>
    <title>Eitan Bar-David</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<nav class="row navbar navbar-inverse">
  	  <div class="container-fluid">
  		    <div class="navbar-header">
  		      <%= link_to "Eitan Bar-David", root_url, class: "navbar-brand" %>
  		    </div>
  		    <ul class="nav navbar-nav navbar-right">
  		      <li><%= link_to projects_path do %>
  		        <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>  Projects
  		      <% end %></li>
  		      <li><%= link_to blog_posts_path do %>
  		        <span class="glyphicon glyphicon-align-left" aria-hidden="true"></span> Blog
  		      <% end %></li>
  		      <li><%= link_to asset_path('eitan-bar-david-resume.pdf'), target: '_blank' do %>
  		        <span class="glyphicon glyphicon-download-alt" aria-hidden="true"></span> Resume
  		      <% end %></li>
  		      <li><%= mail_to "eitansbd@gmail.com", subject: "Connect" do %>
  		        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Contact Me!
  		      <% end %>
  		      </li>
  		      <% if admin_logged_in? %>
  		      <li><%= link_to "Logout", admin_logout_url, method: :delete %></li>
  		      <% end %>
  		    </ul>
  
  	  </div>
  	</nav>
  	
  	<% flash.each do |msg_type, msg| %>
  	<div class="container">
  	  <div class="row">
  	     <div class="col-md-12">
  	       <div class="alert alert-<%= msg_type %>", role: "alert"><%= msg %></div>
  	     </div>
  	   </div>
  	</div>
  	   
        
    <% end %>
  	
  	<%= yield %>
  	
  	<div class="footer">
    	<div class="container">
  	  	 <div class="container-fluid text-center">
  			    <div class="row">
  		        <a href="https://github.com/eitansbd" target="_blank"><%= image_tag 'GitHub-Mark-64px.png', alt: "github", class: "footer-image" %></a>
  		        <a href="https://linkedin.com/in/eitanbardavid" target="_blank"><%= image_tag 'LI-In-Bug.png', class: "footer-image", alt: "linkedin" %></a>
  		    	</div>
  			</div>
  	  </div>
  	</div>
  </body>
</html>
