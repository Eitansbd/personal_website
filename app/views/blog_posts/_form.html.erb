<%= form_for(@blog_post, multipart: true) do |f| %>
    <div class="form-row">
        <div class="col-md-2 col-md-offset-3">
            <div class>
                <%= f.label :title_image %>
                <%= f.file_field :title_image %>
            </div>
        </div>
        
        <div class="col-md-2">
            <div class="form-group">        
                        <%= f.label :title  %>
                        <%= f.text_field :title, class: "form-control" %>
            </div> 
        </div>
        
        <div class="col-md-2">
            <div class="form-group">
                        <%= f.label :subtitle %>
                        <%= f.text_field :subtitle, class: "form-control" %>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form-check">
                <%= f.check_box :published, class: "form-check-input" %>
                <%= f.label "Publish post on upload", class: "form-check-label" %>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-6 col-md-offset-3">
            <div class="form-group">
            <%= f.text_area :content, class: "blog-content-input", placeholder: "Put blog markdown content here" %>
        </div>
    </div>
        
    <div class="row">
        <div class="col-md-9">
            <div class="btn-group pull-right">
                <%= link_to "Cancel", blog_posts_path, class: "btn btn-primary" %>
                <%= link_to "Preview", blog_posts_preview_path, class: "btn btn-primary", target: "_blank" %>
                <%= f.submit button_text, class: "btn btn-primary" %>
            </div>
        </div>
    </div>
<% end %>