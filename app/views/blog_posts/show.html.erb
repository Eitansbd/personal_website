<div class="container">
    <div class="row top-buffer blog-background">
        <div class="col-md-8 col-md-offset-2">
            <div class="page-header">
                <% if admin_logged_in? %>
                    <div class='btn-group'>
                            <%= link_to "Edit", edit_blog_post_url(@blog_post), class: "btn btn-primary pull-left" %>
                            <%= link_to "Delete", blog_post_url(@blog_post), method: :delete, class: "btn btn-primary", data: { confirm: "Delete Cannot Be Undone. Are you sure?" } %>
                    </div>
                <% end %>
                <h1><%= @blog_post.title%></h1>
                <p><%= @blog_post.subtitle %></p>
            </div>
            
            <%= render_markdown(@blog_post.content) %>
        </div>
    </div>
</div>